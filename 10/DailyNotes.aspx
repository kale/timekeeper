<%@ Page Language="C#" MasterPageFile="~/10/Site.master" AutoEventWireup="true" CodeFile="DailyNotes.aspx.cs"
    Inherits="DailyNotes" %>

<asp:Content ID="Content1" ContentPlaceHolderID="MainContent" runat="Server">
    <div id="fullview">
        <h2>
            Notepad
            <asp:Label ID="NoteLabel" runat="server"></asp:Label></h2>
        <br />
        <br />
        <span style="vertical-align: top;">
            <asp:Button ID="SubmitButton" runat="server" Text="Save" OnClick="SubmitButton_Click" />
            <br />
            <asp:TextBox ID="NotesTextBox" runat="server" Rows="30" TextMode="MultiLine" Width="90%"></asp:TextBox>
            <br />
            <span style="background-color: #f0f8ff; border: 1px solid silver; padding: 5px;">Not
                Saved</span> <span style="background-color: White; border: 1px solid silver; padding: 5px;">
                    Saved</span> </span>
    </div>
</asp:Content>
